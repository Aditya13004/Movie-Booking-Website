# Eventura Backend Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=4000

# MongoDB Configuration (optional)
# MONGODB_URI=mongodb://localhost:27017/eventura
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eventura

# TMDB API (for movie data)
# TMDB_API_KEY=your_tmdb_api_key_here

# MovieGlu API (for cinema data - optional)
# MOVIEGLU_CLIENT=EVEN_4
# MOVIEGLU_API_KEY=your_api_key_here
# MOVIEGLU_TERRITORY=IN
# MOVIEGLU_API_VERSION=v201
# MOVIEGLU_AUTH=Basic_auth_string_here

# SMS Provider Configuration (for production OTP)
# SMS_API_KEY=your_sms_provider_key
# SMS_SENDER_ID=EVNTRA

# JWT Configuration (for production auth)
# JWT_SECRET=your_jwt_secret_here
# JWT_EXPIRES_IN=24h